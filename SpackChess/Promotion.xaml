<Window x:Class="SpackChess.Promotion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Promotion" Height="284" Width="231" ResizeMode="NoResize" Topmost="True" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="91*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="124*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnBishop" Content="Bishop" HorizontalAlignment="Left" Height="100" Margin="10,36,0,0" VerticalAlignment="Top" Width="100" Grid.ColumnSpan="3" Click="btnBishop_Click"/>
        <Button x:Name="btnKnight" Content="Knight" HorizontalAlignment="Left" Height="100" Margin="14,36,0,0" VerticalAlignment="Top" Width="100" Grid.Column="2" Click="btnKnight_Click"/>
        <Button x:Name="btnRook" Content="Rook" HorizontalAlignment="Left" Height="100" Margin="10,141,0,0" VerticalAlignment="Top" Width="100" Grid.ColumnSpan="3" Click="btnRook_Click"/>
        <Button x:Name="btnQueen" Content="Queen" HorizontalAlignment="Left" Height="100" Margin="14,141,0,0" VerticalAlignment="Top" Width="100" Grid.Column="2" Click="btnQueen_Click"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Choose Piece to promote to:" VerticalAlignment="Top" Margin="10,11,0,0" Grid.ColumnSpan="3" Width="179"/>

    </Grid>
</Window>
